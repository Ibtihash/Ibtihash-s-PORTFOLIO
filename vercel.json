{
  "version": 2,
  "builds": [
    {
      "src": "portfolio/package.json",
      "use": "@vercel/static-build",
      "config": {
        "workdir": "portfolio"
      }
    },
    {
      "src": "portfolio/backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "portfolio/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "portfolio/$1"
    }
  ]
}